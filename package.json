{
    "name": "dstudioslab",
    "private": true,
    "description": "Professional Prompt Engineering Studio",
    "author": "DStudiosLab <support@dstudioslab.com>",
    "version": "1.1.3",
    "type": "module",
    "main": "electron-dist/main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
        "electron:build": "tsc && vite build && tsc -p tsconfig.electron.json && cp electron/*.js electron-dist/ && electron-builder --mac --win --linux",
        "test": "vitest run"
    },
    "build": {
        "appId": "com.dstudioslab.app",
        "productName": "DStudiosLab",
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "files": [
            "dist/**/*",
            "electron-dist/**/*"
        ],
        "linux": {
            "target": [
                "AppImage",
                "rpm",
                "deb"
            ],
            "category": "Development",
            "synopsis": "Professional Prompt Engineering Studio",
            "description": "A powerful desktop application for creating, testing, and managing AI prompts."
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "directories": {
            "output": "dist-electron"
        }
    },
    "dependencies": {
        "better-sqlite3": "^12.5.0",
        "clsx": "^2.1.0",
        "lucide-react": "^0.344.0",
        "mammoth": "^1.11.0",
        "pdfjs-dist": "^5.4.449",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hot-toast": "^2.4.1",
        "react-markdown": "^10.1.0",
        "react-virtualized-auto-sizer": "^1.0.26",
        "react-window": "^2.2.3",
        "remark-gfm": "^4.0.1",
        "tailwind-merge": "^2.2.1",
        "tesseract.js": "^6.0.1"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.19",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^18.2.56",
        "@types/react-dom": "^18.2.19",
        "@types/react-virtualized-auto-sizer": "^1.0.4",
        "@types/react-window": "^1.8.8",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.18",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron": "^39.2.6",
        "electron-builder": "^26.0.12",
        "jsdom": "^27.2.0",
        "postcss": "^8.4.35",
        "sass": "^1.94.2",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.2.2",
        "vite": "^7.2.6",
        "vitest": "^4.0.15",
        "wait-on": "^9.0.3"
    }
}